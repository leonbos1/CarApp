@model IEnumerable<CarApp.Models.CarViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<h1>These are the cars:</h1>

<div class="row">
    <div class="col-6">

        @foreach (var car in Model)
        {
            <div class="card">

                <div class="card-header">
                    <h5>@car.Brand @car.Model</h5>
                </div>

                <div class="card-body">
                    <p>Price: €@car.Price</p>
                    <p>License Plate: @car.LincensePlate</p>
                    <p>Engine: @car.Engine</p>
                    <p>Build Year @car.BuildYear</p>
                    <p>Body Type: @car.bodyType</p>
                    <form asp-controller="Cars" asp-action="BuyCar" method="post">
                     
                            <input type="hidden" name="id" asp-for="@car.Id" class="form-control" />
                      
                            <button type="submit" class="btn btn-primary">Buy</button>
                    </form>
                    
                </div>

                <div class="card-footer">
                </div>

            </div>
        }


    </div>
</div>